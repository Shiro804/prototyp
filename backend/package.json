{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for my project",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "npx sequelize-cli db:migrate && node dist/app.js",
    "reset-database": "npx sequelize-cli db:seed:undo:all && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "seed-database": "npx sequelize-cli db:seed:all",
    "migrate-database": "npx sequelize-cli db:migrate",
    "drop-database": "npx sequelize-cli db:seed:undo:all"
  },
  "dependencies": {
    "express": "^4.17.1",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "@types/sequelize": "^4.28.20",
    "typescript": "^4.9.5"
  }
}
